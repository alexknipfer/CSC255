PROG2	CSECT
	USING PROG2,15
	SR	7,7	INITIALIZE ACCUMULATOR
*
MORE	XREAD	CARD,79	READ IN FIRST LINE
	XDECI	8,CARD	CONVERT FIRST NUMBER
	BC	B'0100',DONE	BRANCH TO DONE IF INVALID (SENTINEL)
	XDECO	8,PLINE+21	PLACE NUMBER IN PRINTING INPUT LINE
	XPRNT	PLINE,79	PRINT INPUT WITH "THE NUMBER IS"
	AR	7,8	ADD NUMBER TO RUNNING TOTALS
	BC	B'1111',SUBT	BRANCH TO SUBT FOR NEXT NUMBER	
*
SUBT	XREAD	CARD2,79	READ IN NEXT LINE (NUMBER)
	XDECI	6,CARD2
	BC	B'0100',DONE
	XDECO	6,PLINE+21
	XPRNT	PLINE,79
	SR	7,6
	BC	B'1111',MORE
*
DONE	XDECO	7,PLINE2+21
	XPRNT	PLINE2,79
	BCR	B'1111',14	EXIT PROGRAM
*
CARD	DS	CL79	STORAGE FOR INPUT
CARD2	DS	CL79
PLINE	DC	CL80' THE NUMBER READ WAS'
PLINE2	DC	CL80' THE SUM IS: '	
*
	END	PROG2
